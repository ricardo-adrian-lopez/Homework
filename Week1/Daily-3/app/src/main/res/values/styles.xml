<resources>

    <!-- Base application theme. -->
    <style name="MyFirstTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myFristThemePrimaryColor</item>
        <item name="colorPrimaryDark">@color/myFirstThemePrimaryDarkColor</item>
        <item name="colorAccent">@color/myFirstThemePrimaryLightColor</item>
        <item name="android:textViewStyle">@style/MyFirstTheme.TextView</item>
    </style>

    <style name="MyFirstTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/myFirstThemePrimaryTextColor</item>
    </style>
    
    <style name="MySecondTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/MySecondTheme.TextView</item>
    </style>
    
    <style name="MySecondTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/mySecondThemePrimaryTextColor</item>
    </style>

    <style name="MyThirdTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/MyThirdTheme.TextView</item>
    </style>

    <style name="MyThirdTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/myThirdThemePrimaryTextColor</item>
    </style>

</resources>
