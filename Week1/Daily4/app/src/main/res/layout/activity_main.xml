<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnClear"
        android:onClick="onClearSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnMultiplication"
        android:layout_marginStart="11dp"
        android:text="C" />

    <Button
        android:id="@+id/btnDivision"
        android:onClick="onOperandClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSeven"
        android:layout_marginBottom="-162dp"
        android:layout_toEndOf="@+id/btnSeven"
        android:text="/" />

    <Button
        android:onClick="onOperandClicked"
        android:id="@+id/btnMultiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSeven"
        android:layout_marginBottom="-162dp"
        android:layout_toEndOf="@+id/btnDivision"
        android:text="x" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnClear"
        android:layout_marginTop="162dp"
        android:onClick="onNumberClicked"
        android:text="7" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnClear"
        android:onClick="onNumberClicked"
        android:text="8" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnDivision"
        android:onClick="onNumberClicked"
        android:text="9" />

    <Button
        android:onClick="onOperandClicked"
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnMultiplication"
        android:text="-" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnClear"
        android:layout_below="@+id/btnSeven"
        android:onClick="onNumberClicked"
        android:text="4" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_below="@+id/btnSeven"
        android:onClick="onNumberClicked"
        android:text="5" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnDivision"
        android:onClick="onNumberClicked"
        android:text="6" />

    <Button
        android:onClick="onOperandClicked"
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDivision"
        android:layout_toEndOf="@+id/btnMultiplication"
        android:text="+" />

    <Button
        android:id="@+id/btnOne"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnClear"
        android:layout_below="@+id/btnSix"
        android:onClick="onNumberClicked"
        android:text="1" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSix"
        android:layout_toEndOf="@+id/btnClear"
        android:onClick="onNumberClicked"
        android:text="2" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFour"
        android:layout_toEndOf="@+id/btnDivision"
        android:onClick="onNumberClicked"
        android:text="3" />

    <Button
        android:onClick="onResultClicked"
        android:id="@+id/btnResult"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_below="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnMultiplication"
        android:background="@android:color/darker_gray"
        android:text="="
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/btnResult"
        android:layout_alignEnd="@+id/btnMultiplication"
        android:layout_marginBottom="0dp"
        android:onClick="onNumberClicked"
        android:text="0" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="351dp"
        android:layout_height="51dp"
        android:layout_above="@+id/btnDivision"
        android:layout_alignStart="@+id/btnSeven"
        android:fontFamily="serif"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />
</RelativeLayout>